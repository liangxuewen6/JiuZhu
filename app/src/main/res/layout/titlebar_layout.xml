<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/titlebar_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        android:layout_marginTop="@dimen/titlebar_margin_top"
        android:background="@null">

        <ImageView
            android:id="@+id/iv_titlebar_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:padding="@dimen/imageview_padding"
            android:src="@mipmap/titlebar_menu" />

        <ImageView
            android:id="@+id/iv_titlebar_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:padding="@dimen/imageview_padding"
            android:src="@mipmap/titlebar_search"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_titlebar_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="8dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLength="18"
            android:singleLine="true"
            android:text="titlebar_center"
            android:textColor="@color/themeTextColor"
            android:textSize="@dimen/titlebar_text_size" />
    </RelativeLayout>
</FrameLayout>